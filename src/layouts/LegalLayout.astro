---
import "../styles/global.css"
import Header from "../components/chrome/Header.astro";
import Footer from "../components/chrome/Footer.astro";
import { headerData, footerData } from "../data/layout";

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />



    <style>
        .underline {
            text-decoration: underline;
        }
        .content-container {
            max-width: 800px;
            margin: 0 auto;
        }
        .section-anchor {
            scroll-margin-top: 20px;
        }
        .summary-box {
            background-color: #f0f9ff;
            border-left: 4px solid #3b82f6;
        }
    </style>
    
  </head>

  <body class="bg-white text-neutral">
    <Header {...headerData}/>

    <main class="max-w-4xl mx-auto px-5 sm:py-10 md:py-20 prose prose-neutral">
      <slot />
    </main>

    <div class="px-5">
			<Footer {...footerData}/>
		</div>

  </body>
</html>
