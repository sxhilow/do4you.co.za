---
import { Image } from "astro:assets"
import Check from "../../assets/icons/Check.svg"
import Button from "./Button.astro"
import { whatsappData } from "../../data/Whatsapp"

const {
    image,
    title,
    description,
    items = []
} = Astro.props
---

<div class="shadow-md rounded-xl h-full flex flex-col">
    <div>
        <Image
            src={image}
            alt={"Service Image"}
        />
    </div>
    <div class="p-4 md:p-7 gap-5 flex flex-col flex-1">

        <div class="space-y-1">
            <h2 class="text-desktop-h5 leading-tight">{title}</h2>
            <p class="font-light text-desktop-body">{description}</p>
        </div>

        <div class="space-y-3">
            <h3 class="text-desktop-h6 font-medium">What we help with: </h3>
            <ul class="space-y-2 text-desktop-body font-light">
                {
                    items.map((item:any) => (
                        <li class="flex items-center gap-2 leading-tight">
                            <Image
                                src={Check}
                                alt={"✔️"}
                            />

                            <span>{item}</span>
                        </li>
                    ))
                }
            </ul>

        </div>

        <div class=" mt-auto">
            <Button
                href={whatsappData.link}
                label="Let us help you"
                classes="block rounded-lg px-5 py-3 text-accent-green-800 border text-center border-accent-green-600 hover:bg-accent-green-500 hover:text-surface cursor-pointer text-mobile-h6 md:text-desktop-h6"
                target="_blank" rel="noopener noreferrer" aria-label="Chat with us on WhatsApp"
            />
        </div>

        
    </div>
    
</div>
